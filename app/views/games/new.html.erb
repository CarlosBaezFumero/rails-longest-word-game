<h1>New Game</h1>
<%= @letters %>

<form action="/score" method="post" data-turbo="false">
  <div class='d-flex'>
    <input class="form-control w-25" type="text" name="query">
    <input class="btn btn-primary display-inline" type="submit" value="Play!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </div>
</form>
